generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model categories {
  id         String       @id
  slug       String       @unique
  title      String
  isActive   Boolean      @default(true)
  order      Int          @default(0)
  menu_items menu_items[]
}

model menu_items {
  id          String     @id
  title       String
  description String?
  price       Int
  image       String?
  categoryId  String
  isAvailable Boolean    @default(true)
  categories  categories @relation(fields: [categoryId], references: [id], onDelete: Cascade)
}

model order_items {
  id      String @id
  orderId String
  itemId  String
  title   String
  price   Int
  qty     Int
  orders  orders @relation(fields: [orderId], references: [id], onDelete: Cascade)
}

model orders {
  id            String        @id
  total         Int
  status        OrderStatus   @default(PENDING)
  createdAt     DateTime      @default(now())
  customerName  String
  customerPhone String
  address       String
  deliveryFee   Int
  order_items   order_items[]
}

enum OrderStatus {
  PENDING
  PAID
  DELIVERING
  DONE
  CANCELED
}
